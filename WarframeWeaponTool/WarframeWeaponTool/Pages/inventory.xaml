<UserControl x:Class="WarframeWeaponTool.Pages.inventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarframeWeaponTool.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="330" d:DesignWidth="544">
    <Grid Background="White">
        <ComboBox x:Name="menuSelect" HorizontalAlignment="Left" Margin="389,10,0,0" VerticalAlignment="Top" Width="143" Loaded="menuSelectLoaded" SelectionChanged="menuSelectSelectionChanged"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Height="276" Width="522"/>
        <Label x:Name="label" Content="Inventory View" Margin="220,9,192,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13.333"/>
        <Button x:Name="button" Content="Add/Delete" HorizontalAlignment="Left" Margin="109,13,0,0" VerticalAlignment="Top" Width="75" Background="#FFF0F0F0"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,12,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="94" FontFamily="Segoe UI Light"/>   
    </Grid>
</UserControl>
