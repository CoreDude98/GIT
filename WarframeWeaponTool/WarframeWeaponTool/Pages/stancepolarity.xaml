        <Label x:Name="stanceLbl" Content="Stance Polarity" HorizontalAlignment="Left" Margin="181,42,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Semibold" ScrollViewer.VerticalScrollBarVisibility="Auto" Padding="0,5,5,5"/>
