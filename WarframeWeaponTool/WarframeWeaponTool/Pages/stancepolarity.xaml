        <ComboBox x:Name="menuSelect" Loaded="menuSelectLoaded"  HorizontalAlignment="Left" Margin="412,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="wpnTypeStance3Img" HorizontalAlignment="Left" Height="169" Margin="417,151,0,0" VerticalAlignment="Top" Width="108"/>
        <Image x:Name="wpnTypeStance1Img" HorizontalAlignment="Left" Height="169" Margin="181,151,0,0" VerticalAlignment="Top" Width="108"/>
        <Image x:Name="wpnTypeStance2Img"  HorizontalAlignment="Left" Height="169" Margin="299,151,0,0"  VerticalAlignment="Top" Width="108"/>
        <Label x:Name="stancePolLbl" Content="" HorizontalAlignment="Left" Margin="215,76,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label x:Name="weaponLbl" Content="Weapon Polarities" HorizontalAlignment="Left" Margin="299,42,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Semibold" Padding="0,5,5,5"/>
        <Label x:Name="wpnPol1Lbl" Content="" HorizontalAlignment="Left" Margin="354,76,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label x:Name="wpnPol1MultiplierLbl" Content="" HorizontalAlignment="Left" Margin="296,76,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label x:Name="x1" Content="" HorizontalAlignment="Left" Margin="309,76,0,0" VerticalAlignment="Top" Height="25"/>
        <Label x:Name="wpnPol2Lbl" Content="" HorizontalAlignment="Left" Margin="474,76,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label x:Name="wpnPol2MultiplierLbl" Content="" HorizontalAlignment="Left" Margin="416,76,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label x:Name="x2" Content="" HorizontalAlignment="Left" Margin="429,76,0,0" VerticalAlignment="Top" Height="25"/>
        <Image x:Name="stancePolImg" HorizontalAlignment="Left" Height="29" Margin="181,76,0,0" VerticalAlignment="Top" Width="29"/>
        <Image x:Name="wpnPol1Img" HorizontalAlignment="Left" Height="29" Margin="325,74,0,0" VerticalAlignment="Top" Width="29"/>
        <Image x:Name="wpnPol2Img" HorizontalAlignment="Left" Height="29" Margin="445,74,0,0" VerticalAlignment="Top" Width="29"/>
    </Grid>
</UserControl>
